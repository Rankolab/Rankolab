modules = ["php", "php-8.3"]

[nix]
channel = "stable-24_05"
packages = ["unzip", "file"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Laravel Server"

[[workflows.workflow]]
name = "Laravel Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "touch bootstrap/cache/.gitignore && touch storage/framework/.gitignore && mkdir -p storage/framework/sessions storage/framework/views storage/framework/cache && php artisan serve --host=0.0.0.0 --port=5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "touch bootstrap/cache/.gitignore && touch storage/framework/.gitignore && mkdir -p storage/framework/sessions storage/framework/views storage/framework/cache && php artisan serve --host=0.0.0.0 --port=5000"]
